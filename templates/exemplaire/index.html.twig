{% extends 'base.html.twig' %}

{% block title %}Hello ExemplaireController!{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="example-wrapper">
        {% for exemplaire in exemplaires %}
            <p>
                Livre : {{ exemplaire.ouvrage.titre }} cote : {{exemplaire.cote}}, état : {{exemplaire.etat}}, disponibilité : {% if exemplaire.disponibilite == 1 %} disponible {% else %} indisponible {% endif %}
            </p>
        {% endfor %}
    </div>
{% endblock %}
