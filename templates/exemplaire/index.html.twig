{% extends 'base.html.twig' %}

{% block title %}Hello ExemplaireController!{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
        .nice-btn {
			display: inline-block;
			padding: 10px 18px;
			background: #4a90e2;
			color: white;
			border-radius: 6px;
			text-decoration: none;
			transition: 0.2s;
		}
		.nice-btn:hover {
			background: #357ab8;
		}
    </style>

    <div class="example-wrapper">
        {% for exemplaire in exemplaires %}
            <p>
                #{{ exemplaire.id }} | livre : {{ exemplaire.ouvrage.titre }} cote : {{exemplaire.cote}}, Ã©tat : {{exemplaire.etat}}, {% if exemplaire.disponibilite == 1 %} disponible {% else %} indisponible {% endif %}
            </p>
        {% endfor %}
    <a href="{{ path('app_newExemplaire') }}" class="nice-btn">Nouvel exemplaire</a>
    </div>
{% endblock %}
